#!/usr/bin/env node

//  ---------------------------------------------------------------------------------------------------------------  //

var no = require('nommon');
var jspath = require('jspath');
var jpath = require('jpath');

//  ---------------------------------------------------------------------------------------------------------------  //

var bench = require('no.benchmark');

//  ---------------------------------------------------------------------------------------------------------------  //

var data = {

    foo: {
        bar: 42
    },

    books: [
        {
            id: 1,
            title: 'Clean Code',
            author: {
                name: 'Robert C. Martin'
            },
            price: 17.96
        },
        {
            id: 2,
            title: 'Maintainable JavaScript',
            author: {
                name: 'Nicholas C. Zakas'
            },
            popular: true,
            price: 10
        },
        {
            id: 3,
            title: 'Agile Software Development',
            author: {
                name: 'Robert C. Martin'
            },
            price: 20
        },
        {
            id: 4,
            title: 'JavaScript: The Good Parts',
            author: {
                name: 'Douglas Crockford'
            },
            popular: true,
            price: 15.67
        },
    ]

};

//  ---------------------------------------------------------------------------------------------------------------  //

var rows = {

    '.foo': {
        'no.jpath': {
            jpath: '.foo',
            data: data
        },
        'jspath': {
            jpath: '.foo',
            data: data
        },
        'jpath': {
            jpath: '.foo',
            data: data
        },
    },

    '.foo.bar': {
        'no.jpath': {
            jpath: '.foo.bar',
            data: data
        },
        'jspath': {
            jpath: '.foo.bar',
            data: data
        },
        'jpath': {
            jpath: '.foo.bar',
            data: data
        },
    },

    '.foo[ .bar ]': {
        'no.jpath': {
            jpath: '.foo[ .bar ]',
            data: data
        },
        'jspath': {
            jpath: '.foo{ .bar }',
            data: data
        },
        'jpath': {
            jpath: '.foo[ .bar ]',
            data: data
        }
    },

    '.bar': {
        'no.jpath': {
            jpath: '.bar',
            data: data
        },
        'jspath': {
            jpath: '.bar',
            data: data
        },
        'jpath': {
            jpath: '.bar',
            data: data
        },
    },

    '.bar.foo': {
        'no.jpath': {
            jpath: '.bar.foo',
            data: data
        },
        'jspath': {
            jpath: '.bar.foo',
            data: data
        },
        'jpath': {
            jpath: '.bar.foo',
            data: data
        },
    },

    '.books': {
        'no.jpath': {
            jpath: '.books',
            data: data
        },
        'jspath': {
            jpath: '.books',
            data: data
        },
        'jpath': {
            jpath: '.books',
            data: data
        },
    },

    '.books.author': {
        'no.jpath': {
            jpath: '.books.author',
            data: data
        },
        'jspath': {
            jpath: '.books.author',
            data: data
        },
        'jpath': {
            jpath: '.books.author',
            data: data
        },
    },

    '.books.author.name': {
        'no.jpath': {
            jpath: '.books.author.name',
            data: data
        },
        'jspath': {
            jpath: '.books.author.name',
            data: data
        },
        'jpath': {
            jpath: '.books.author.name',
            data: data
        },
    },

    '.books[ .author.name == "Robert C. Martin" ].title': {
        'no.jpath': {
            jpath: '.books[ .author.name == "Robert C. Martin" ].title',
            data: data
        },
        'jspath': {
            jpath: '.books{.author.name == "Robert C. Martin"}.title',
            data: data
        },
        'jpath': {
            jpath: '.books[ .author.name == "Robert C. Martin" ].title',
            data: data
        },
    },

    '.books[ .popular ].title': {
        'no.jpath': {
            jpath: '.books[ .popular ].title',
            data: data
        },
        'jspath': {
            jpath: '.books{ .popular }.title',
            data: data
        },
        'jpath': {
            jpath: '.books[ .popular ].title',
            data: data
        },
    },

    '.books[ .popular ]': {
        'no.jpath': {
            jpath: '.books[ .popular ]',
            data: data
        },
        'jspath': {
            jpath: '.books{ .popular }',
            data: data
        },
        'jpath': {
            jpath: '.books[ .popular ]',
            data: data
        },
    },

    '.books[ .price < 17 ].title': {
        'no.jpath': {
            jpath: '.books[ .price < 17 ].title',
            data: data
        },
        'jspath': {
            jpath: '.books{.price < 17}.title',
            data: data
        },
        'jpath': {
            jpath: '.books[ .price < 17 ].title',
            data: data
        },
    },

    '.books[ .price < 17 || .author.name == "Robert C. Martin" ].title': {
        'no.jpath': {
            jpath: '.books[ .price < 17 || .author.name == "Robert C. Martin" ].title',
            data: data
        },
        'jspath': {
            jpath: '.books{ .price < 17 || .author.name == "Robert C. Martin" }.title',
            data: data
        },
        'jpath': {
            jpath: '.books[ .price < 17 || .author.name == "Robert C. Martin" ].title',
            data: data
        },
    },

    '.books[2]': {
        'no.jpath': {
            jpath: '.books[2]',
            data: data
        },
        'jspath': {
            jpath: '.books[2]',
            data: data
        },
        'jpath': {
            jpath: '.books[2]',
            data: data
        }
    },

    '.books[10]': {
        'no.jpath': {
            jpath: '.books[10]',
            data: data
        },
        'jspath': {
            jpath: '.books[10]',
            data: data
        },
        'jpath': {
            jpath: '.books[10]',
            data: data
        }
    },

    '.books[ .popular ][1]': {
        'no.jpath': {
            jpath: '.books[ .popular ][1]',
            data: data
        },
        'jspath': {
            jpath: '.books{ .popular }[1]',
            data: data
        },
        'jpath': {
            jpath: '.books[ .popular ][1]',
            data: data
        }
    },

};

//  ---------------------------------------------------------------------------------------------------------------  //

var columns = {

    'no.jpath': function(test) {
        var r = no.jpath(test.jpath, test.data, test.vars);

        return (r instanceof no.JNode || r instanceof no.JNodeset) ? r.toArray() : r;
    },

    'jspath': function(test) {
        return jspath.apply(test.jpath, test.data, test.vars);
    },

    'jpath': function(test) {
        return jpath(test.data, test.jpath);
    },

};

//  ---------------------------------------------------------------------------------------------------------------  //

bench(rows, columns);

//  ---------------------------------------------------------------------------------------------------------------  //

